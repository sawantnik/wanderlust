        </div> -->

        <div class="navbar-nav">
          <form class="d-flex" role="search" action="/listings/search" method="get" >
            <input class="form-control me-2 search-inp" type="search" placeholder="Search  Destinations" name="query" >
            <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i><p>Search</p></button>
          </form>
        </div>

      <div class="navbar-collapse" id="navbarNavAltMarkup">
        <div class="nav-profile">
          <div class="hamburger-menu" id="hamburger-menu">
             <!-- &#9776; Unicode character for hamburger icon -->
            <i class="fa-solid fa-bars"></i>
          </div>
        <div class="nav-links" id="nav-links">
          <a class="nav-link" href="/listings/new">Airbnb Your Home</a> 

          <% if(!currUser){ %>
            <a class="nav-link"  href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } %>
          <% if(currUser){ %>
            <a class="nav-link" href="/logout"><b>Log out</b></a> 
          <% } %>
        
        </div>
          
        </div>
    </div>
    </div>
  </nav>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
    const hamburgerMenu = document.getElementById('hamburger-menu');
    const navProfile = document.querySelector('.nav-profile');

    hamburgerMenu.addEventListener('click', () => {
        navProfile.classList.toggle('active');
    });
});

  </script>